= form_for @showdown do |f|
  - if @showdown.errors.any?
    #error_explanation
      %h2= "#{pluralize(@showdown.errors.count, "error")} prohibited this showdown from being saved:"
      %ul
        - @showdown.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
    
  .field
    = f.label "Add Topic 1"
    = select_tag "topic_1", options_from_collection_for_select(@topics, "id", "name")
    
  .field
    = f.label "Add Topic 2"
    = select_tag "topic_2", options_from_collection_for_select(@topics, "id", "name")
      
  .actions
    = f.submit 'Save'
